<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <title>Flights!</title>
</head>

<body>
    <%- include('../partials/nav') %>
    <h2>All Flights</h2>
    <table>
        <thead>
            <tr>
                <th><a href="/flights?sortBy=airline">Airline</a></th>
                <th><a href="/flights?sortBy=flightNumber">Flight Number</a></th>
                <th><a href="/flights?sortBy=departs">Departure Time</a></th>
            </tr>
        </thead>
        <tbody id="tableBody">
            <% flights.forEach(function(f) { %>
            <tr>
                <td class="airline"><%= f.airline %></td>
                <td class="flightNumber"><%= f.flightNumber %></td>
                <td><%= f.departs %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/flights/new">Add Flight</a>
</body>

</html>


