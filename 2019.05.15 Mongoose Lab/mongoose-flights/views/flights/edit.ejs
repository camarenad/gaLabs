<%- include('../partials/nav') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>Mongoose Flights</title>
</head>

<body>
    <h2>Edit Your Flight</h2>
    <form method="POST" action="/flights/<%= flightId %>?_method=PUT">
        <input type="text" name="flight"
            autocomplete="off"
            value="<%= flight.flight %>>
        <label>Airline:
        </label>
        <select name="airline">
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select><br>
        <label>Flight Number:
            <input type="number" name="flightNumber" >
        </label><br>
        <label>Departure Date
            <input type="datetime-local" name="departs" value="2018-06-12T19:30">
        </label><br>
        <label>Airport
            <select name="airport">
                <option value="null"></option>
                <option value="AUS">AUS</option>
                <option value="DAL">DAL</option>
                <option value="LAX">LAX</option>
                <option value="SEA">SEA</option>
            </select><br>
        </label>
        <input type="submit" value="Add Flight">
    </form>
</body>

</html>